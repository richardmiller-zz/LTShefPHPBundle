<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="lt_shefphp.request.mongodb_param_converter"
                 class="LT\ShefPHPBundle\Request\ParamConverter\DoctrineMongoDBParamConverter"
                 public="false">
            <tag name="request.param_converter" priority="10" />
            <argument type="service" id="doctrine.odm.mongodb.default_document_manager" />
        </service>

    </services>
</container>
